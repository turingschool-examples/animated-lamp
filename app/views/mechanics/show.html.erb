<h1><%= @mechanic.name %></h1>

<h3>Years of experience: <%= @mechanic.years_experience %></h3>
<h3>Rides <%= @mechanic.name %> is working on:</h3>
<ul>
<% @mechanic.rides.each do |ride| %>
  <li><%= ride.name %></li>
<% end %>
</ul>

<h3>Add a ride to <%= @mechanic.name %>'s workload:</h3>
<%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post, data: { turbo: false } do |form| %>
  <%= form.label "Ride id:" %>
  <%= form.text_field :ride_id %>
  <%= form.submit "Submit" %>
<% end %>