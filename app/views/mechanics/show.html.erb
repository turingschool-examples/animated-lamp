<h2><%= @mechanic.name %></h2>
<p>Years of Experience: <%= @mechanic.years_experience %></p>
<h3>Currently working on these rides:</h3>

<% @mechanic.rides.each do |ride| %>
  <li><%= ride.name %></li>
<% end %>

<div id="add_ride">
<h2>Add a ride to <%= @mechanic.name %>'s workload: </h2>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :post do |f| %>
  <%= f.label :new_ride_id %>
  <%= f.text_field :new_ride_id %>
  <%= f.submit %>
<% end %>
</div
