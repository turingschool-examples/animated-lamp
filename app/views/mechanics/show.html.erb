<h1><%= @mechanic.name %></h1>
<p><strong>Years Experience:</strong> <%= @mechanic.years_experience %></p>
<br>
<div id="rides_working_on">
  <h3>Rides Working On:</h3>
  <%= @mechanic.mechanic_rides.each do |broken_ride| %>
    <div id="ride-<%= broken_ride.ride_id %>">
      <p><%= broken_ride.ride.name %></p>
    </div>
  <% end %>
</div>
<br>
<div id="add_ride">
  <h4>Add a ride to workload:</h4>
  <%= form_with url: "/mechanics/#{@mechanic.id}", method: :post, data: {turbo: false} do |f| %>
    <%= f.label :ride_id %>
    <%= f.text_field :ride_id %>
    <%= f.submit "Add Ride" %>
  <% end %>
</div>